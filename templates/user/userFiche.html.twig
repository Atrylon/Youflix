{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

<div class="example-wrapper">
    {% if user is not null %}
        <b>Fiche de : </b>{{ user.firstname}} {{ user.lastname }}
        <br />
        <b>Email : </b>{{ user.email }}
        <br />
        <b>Née le : </b>{{ user.birthday|date('d/m/y') }}
        <br><br>
        <h3>Vidéo(s) :</h3>
        <ul>
            {% for video in user.videos %}
                <li>
                    <h4>Title : {{ video.title }}</h4>
                    <div>
                        <b>Url : </b><a href=" https://www.youtube.com/watch?v={{ video.url }} ">https://www.youtube.com/watch?v={{ video.url }} </a><br>
                    </div>
                    <p>
                        <b>Description : </b> {{ video.description }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        Pas d'utilisateur correspondant à cet ID.
    {% endif %}
</div>

{% endblock %}
