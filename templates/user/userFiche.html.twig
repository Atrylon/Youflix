{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

<div class="example-wrapper">
    {% if user is not null %}
        <div class="row">
            <div class="col-md-9">
                <h2>Fiche de : {{ user.firstname}} {{ user.lastname }}</h2>
            </div>
            <a href="{{ path( 'user_remove', {'id': user.id}) }} ">
                <button type="button" class="btn btn-danger">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    Supprimer l'utilisateur
                </button>
            </a>
        </div>
        {{ form_start(form) }}
        Email : {{ form_widget(form.email) }} <br>
        Firstname : {{ form_widget(form.firstname) }} <br>
        Lastname : {{ form_widget(form.lastname) }} <br />
        <div class="row col-md-12">
            Birthday :
            <span class="col-md-2">
                {{  form_widget(form.birthday.day) }}
            </span>
            <span class="col-md-2">
                {{  form_widget(form.birthday.month) }}
            </span>
            <span class="col-md-2">
                {{  form_widget(form.birthday.year) }}
            </span>
        </div>
        <br>
        {{ form_end(form) }}
    {% else %}
        Pas d'utilisateur correspondant Ã  cet ID.
    {% endif %}
</div>

{% endblock %}
